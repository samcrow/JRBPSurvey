{
  "version": 8,
  "name": "Jasper Ridge map",
  "metadata": {},
  "glyphs": "asset://font/{fontstack}/{range}.pbf",
  "sources": {
    "smco_2022_tiles": {
      "type": "raster",
      "tiles": ["asset://tiles-smco-2022/{z}/{x}/{y}.webp"],
      "maxzoom": 19,
      "tileSize": 256
    },
    "streams": {
      "type": "geojson",
      "data": "asset://map_vectors/streams.geojson"
    },
    "jasper_ridge_roads_trails": {
      "type": "geojson",
      "data": "asset://map_vectors/roads_trails.geojson"
    },
    "site_points": {
      "type": "geojson",
      "data": "asset://map_vectors/sites_wgs84.geojson"
    },
    "route_centroids": {
      "type": "geojson",
      "data": "asset://map_vectors/route_centroids.geojson"
    }
  },
  "sprite": "",
  "layers": [
    {
      "id": "imagery",
      "type": "raster",
      "source": "smco_2022_tiles"
    },
    {
      "id": "streams",
      "type": "line",
      "source": "streams",
      "filter": ["all", ["==", "waterway", "stream"]],
      "paint": {
        "line-color": "rgba(17, 48, 184, 1)",
        "line-width": 3
      },
      "layout": {"line-join": "round"}
    },
    {
      "id": "trails",
      "type": "line",
      "source": "jasper_ridge_roads_trails",
      "filter": ["all", ["==", "Type", "Trail"]],
      "layout": {"line-cap": "round"},
      "paint": {
        "line-color": "rgba(208, 208, 208, 1)",
        "line-width": 1.5,
        "line-dasharray": [2, 2]
      }
    },
    {
      "id": "roads_casing",
      "type": "line",
      "source": "jasper_ridge_roads_trails",
      "filter": ["all", ["==", "Type", "Road"]],
      "layout": {
        "line-cap": "butt",
        "line-join": "miter",
        "visibility": "visible"
      },
      "paint": {
        "line-width": 5,
        "line-color": "rgba(52, 52, 52, 1)"
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "jasper_ridge_roads_trails",
      "filter": ["all", ["==", "Type", "Road"]],
      "layout": {"line-cap": "round"},
      "paint": {
        "line-color": "rgba(142, 125, 105, 1)",
        "line-width": 3
      }
    },
    {
      "id": "all_route_lines",
      "type": "line",
      "source": "route_lines",
      "paint": {
        "line-color": "white",
        "line-width": 3
      }
    },
    {
      "id": "all_site_labels",
      "type": "symbol",
      "source": "site_points",
      "minzoom": 15,
      "layout": {
        "text-field": ["get", "name"],
        "text-anchor": "top",
        "text-offset": [0, 0.5],
        "text-size": 20
      },
      "paint": {
        "text-color": "white",
        "text-halo-color": "rgba(54, 54, 54, 1)",
        "text-halo-width": 2,
        "text-halo-blur": 1
      }
    },
    {
      "id": "route_labels",
      "type": "symbol",
      "source": "route_centroids",
      "maxzoom": 15,
      "layout": {
        "text-field": ["get", "route"],
        "text-anchor": "center",
        "text-size": 22
      },
      "paint": {
        "text-color": "white",
        "text-halo-color": "rgba(54, 54, 54, 1)",
        "text-halo-width": 3,
        "text-halo-blur": 1
      }
    }
  ]
}
