{
  "version": 8,
  "name": "Jasper Ridge map",
  "metadata": {},
  "glyphs": "asset://font/{fontstack}/{range}.pbf",
  "sources": {
    "openstreetmap_streams": {
      "type": "geojson",
      "data": "asset://map_vectors/openstreetmap_streams.geojson"
    },
    "jasper_ridge_roads_trails": {
      "type": "geojson",
      "data": "asset://map_vectors/roads_trails.geojson"
    },
    "site_points": {
      "type": "geojson",
      "data": "asset://map_vectors/sites_wgs84.geojson"
    },
    "route_centroids": {
      "type": "geojson",
      "data": "asset://map_vectors/route_centroids.geojson"
    }
  },
  "sprite": "",
  "layers": [
    {
      "id": "imagery",
      "type": "raster",
      "source": "usgs_tiles"
    },
    {
      "id": "streams",
      "type": "line",
      "source": "openstreetmap_streams",
      "filter": ["all", ["==", "waterway", "stream"]],
      "paint": {
        "line-color": "rgba(103, 126, 206, 1)",
        "line-width": 2,
        "line-blur": 0
      },
      "layout": {"line-join": "round"}
    },
    {
      "id": "trails",
      "type": "line",
      "source": "jasper_ridge_roads_trails",
      "filter": ["all", ["==", "Type", "Trail"]],
      "layout": {"line-cap": "round"},
      "paint": {
        "line-color": "rgba(152, 56, 56, 1)",
        "line-width": 1.5,
        "line-offset": 0,
        "line-dasharray": [2, 2]
      }
    },
    {
      "id": "roads_casing",
      "type": "line",
      "source": "jasper_ridge_roads_trails",
      "filter": ["all", ["==", "Type", "Road"]],
      "layout": {
        "line-cap": "butt",
        "line-join": "miter",
        "visibility": "visible"
      },
      "paint": {
        "line-width": 5,
        "line-color": "rgba(136, 136, 136, 1)",
        "line-dasharray": [0.5, 0.5]
      }
    },
    {
      "id": "roads",
      "type": "line",
      "source": "jasper_ridge_roads_trails",
      "filter": ["all", ["==", "Type", "Road"]],
      "layout": {"line-cap": "round"},
      "paint": {
        "line-color": "rgba(161, 145, 124, 1)",
        "line-width": 3,
        "line-gap-width": 0,
        "line-blur": 0
      }
    },
    {
      "id": "all_site_labels",
      "type": "symbol",
      "source": "site_points",
      "minzoom": 15,
      "layout": {
        "text-field": ["get", "name"],
        "text-anchor": "top",
        "text-offset": [0, 0.5],
        "text-size": 20
      },
      "paint": {
        "text-color": "white",
        "text-halo-color": "rgba(54, 54, 54, 1)",
        "text-halo-width": 2,
        "text-halo-blur": 1
      }
    },
    {
      "id": "all_site_circles",
      "type": "circle",
      "source": "site_points",
      "paint": {
        "circle-radius": 5,
        "circle-color": "rgba(161, 81, 152, 1)",
        "circle-blur": 0
      }
    },
    {
      "id": "route_labels",
      "type": "symbol",
      "source": "route_centroids",
      "maxzoom": 15,
      "layout": {
        "text-field": ["get", "route"],
        "text-anchor": "center",
        "text-size": 25
      },
      "paint": {
        "text-color": "white",
        "text-halo-color": "rgba(54, 54, 54, 1)",
        "text-halo-width": 3,
        "text-halo-blur": 1
      }
    }
  ]
}
