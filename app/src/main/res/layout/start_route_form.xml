<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:padding="@dimen/timer_margin"
    android:rowCount="4">

    <EditText
        android:id="@+id/fieldTabletId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:ems="10"
        android:inputType="textShortMessage|number" />

    <EditText
        android:id="@+id/fieldSurveyorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/fieldSensorId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:ems="10"
        android:inputType="textShortMessage|number" />

    <TextView
        android:id="@+id/labelRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="start|center_vertical"
        android:layout_row="3"
        android:text="Route" />

    <TextView
        android:id="@+id/labelTabletId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Tablet ID" />

    <TextView
        android:id="@+id/labelSensorId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Sensor ID" />

    <TextView
        android:id="@+id/labelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Your name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="1"
        android:layout_row="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSelectRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="Select" />

        <TextView
            android:id="@+id/labelSelectedRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="None"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>
</GridLayout>
